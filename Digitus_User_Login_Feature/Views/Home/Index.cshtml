@model Digitus_User_Login_Feature.Models.BaseModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="card-deck mb-3 text-center">
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Aktif Kullanıcı Sayısı</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">15</h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>10 users included</li>
                    <li>2 GB of storage</li>
                    <li>Email support</li>
                    <li>Help center access</li>
                </ul>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Ortalama Aktivasyon Süresi</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">@Model.SuccessRegistirationsCount</h1> saniye
                <ul class="list-unstyled mt-3 mb-4">
                    <li>20 users included</li>
                    <li>10 GB of storage</li>
                    <li>Priority email support</li>
                    <li>Help center access</li>
                </ul>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Başarısız Kayıt İşlem Sayısı</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">30</h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>30 users included</li>
                    <li>15 GB of storage</li>
                    <li>Phone and email support</li>
                    <li>Help center access</li>
                </ul>
            </div>
        </div>
    </div>

</div>